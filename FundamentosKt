    fun main() {
    
       val pessoa1 = pessoa()
    pessoa1.titulo = " Ficha M√©dica"
    println(pessoa1.titulo)
    println("")
    pessoa1.nome = "Nome = Eduardo"
    println(pessoa1.nome)
    pessoa1.Alergias = "Alergia = poeira"
    println(pessoa1.Alergias )
    pessoa1.medicamentos = "rem√©dios = Para enchaqueca e enjoo"
    println(pessoa1.medicamentos)
    pessoa1.sangue = "tipo sanguineo = o- "
    println(pessoa1.sangue)
    pessoa1.idade = 19
    println("Idade = "+ pessoa1.idade )
    
    
    
}
    
    class pessoa(){
    //declara√ß√£o de atributos para a classe pessoa
    var titulo = ""
    var nome = ""
    var medicamentos = ""
    var Alergias = ""
    var sangue = ""
    var idade = 19 
    var altura = 1.74 
}
    
    
    
